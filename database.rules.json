{
  "rules": {
    "friends": {
      "$uid": {
        // users can only read/write friends under their own IDs
        ".write": "$uid === auth.uid",
        ".read": "$uid === auth.uid",
        // friend object begins here
        "$friend_id": {
          // validate first name and last name
          "first_name": {
            ".validate": "newData.exists() && newData.val().length < 100"
          },
          "last_name": {
            ".validate": "newData.exists() && newData.val().length < 100"
          },
          // validate email address
          "email": {
            ".validate": "newData.exists() && newData.val().matches(/^\\S+@\\S+\\.\\S+$/)"
          },
          // validate twitter handle
          "twitter": {
            ".validate": "newData.exists() && newData.val().length < 16 && newData.val().matches(/^@[\\S]{1,15}$/)"
          }
        }
      }
    }
  }
}
